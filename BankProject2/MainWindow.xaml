<Window x:Class="BankProject2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BankProject2"
        Title="VakıfBank" Height="620" Width="1100"
        Background="#F4F6FB"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- ÜST BAR -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#fff" Height="64" CornerRadius="0,0,16,16" Effect="{DynamicResource DropShadowEffect}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="VAKIFBANK" FontWeight="Bold" FontSize="28" Foreground="#222" Margin="0,0,8,0"/>
                <TextBlock Text="•" FontSize="28" Foreground="#F7D90F" Margin="0,0,8,0"/>
                <TextBlock Text="Dijital Bankacılık" FontSize="18" Foreground="#888"/>
                <Button x:Name="Çıkış" 
                        Content="Çıkış Yap" 
                        FontWeight="SemiBold" 
                        FontSize="14" 
                        Background="#FF4757" 
                        Foreground="White" 
                        Height="36" 
                        Width="100" 
                        Margin="650,0,0,0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        BorderBrush="Transparent" 
                        BorderThickness="0"
                        FontFamily="Segoe UI"
                        Cursor="Hand"
                        Click="log_out_btnClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3742"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF2F3A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <!-- YAN MENÜ -->
        <Border Grid.Column="0" Background="#222" CornerRadius="18" Margin="10,0,10,10" Effect="{DynamicResource DropShadowEffect}" Grid.ColumnSpan="2" Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="12,20"/>
                        <Setter Property="Height" Value="48"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Background" Value="#333"/>
                        <Setter Property="BorderBrush" Value="#444"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="18,0,0,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <ContentPresenter/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F7D90F"/>
                                            <Setter Property="Foreground" Value="#222"/>
                                            <Setter Property="BorderBrush" Value="#F7D90F"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <Button Content="🏠  Ana Sayfa" Click="Home_Click"/>
                <Button Content="📝  Kayıt Ol" Click="Register_Click"/>
                <Button Content="🏦  Banka" Click="Banka_Click"/>
                <Button Content="💳  Kredi Kart" Click="CreditCard_Click"/>
                <Button Content="💱  Döviz" Click="Currency_Click"/>
                <Button Content="📈  Güncel" Click="Current_Click"/>
                <Button Content="🔄  Al - Sat" Click="Sell_Buy_Click"/>
            </StackPanel>
        </Border>

        <!-- İÇERİK ALANI -->
        <Border Grid.Row="1" Grid.Column="1" Margin="24,10,24,24" Background="#fff" CornerRadius="16" Padding="28" Effect="{DynamicResource DropShadowEffect}">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </Grid>
</Window>
