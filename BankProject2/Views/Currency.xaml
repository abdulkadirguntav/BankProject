<UserControl x:Class="BankProject2.CurrencyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             Background="#F4F6FB">
    <Grid>
        <Border Background="#fff" CornerRadius="18" Padding="36" Margin="48,48,48,48" Effect="{DynamicResource DropShadowEffect}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,18" VerticalAlignment="Center">
                    <Viewbox Width="38" Height="38" Margin="0,0,12,0" VerticalAlignment="Center">
                        <Canvas Width="32" Height="32">
                            <Ellipse Width="32" Height="32" Fill="#F7D90F"/>
                            <TextBlock Text="💰" FontSize="18" FontWeight="Bold" Foreground="#222" Canvas.Left="6" Canvas.Top="5"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="My Currency Accounts" FontSize="28" FontWeight="Bold" Foreground="#222" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Döviz Hesapları -->
                <TextBlock Text="Your Currency Accounts" FontSize="16" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,12" HorizontalAlignment="Center"/>
                <ComboBox x:Name="CurrencyComboBox" Width="340" Height="36" FontSize="15" Margin="0,0,0,16"/>
                
                <!-- Seçili Döviz Bakiye -->
                <Border Background="#F7D90F" Padding="16" Margin="0,0,0,16" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Selected Currency Balance" FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="SelectedCurrencyBalanceText" Text="0,00" FontSize="20" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
