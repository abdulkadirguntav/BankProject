<UserControl x:Class="BankProject2.Sell_BuyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             Background="#F4F6FB">
    <UserControl.Resources>
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#888"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       FontSize="15"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="watermark" Property="Foreground" Value="#CCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="32,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="#eee"/>
            <Setter Property="BorderBrush" Value="#eee"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="{TemplateBinding Background}" CornerRadius="12,12,0,0" BorderThickness="0" Margin="0,0,8,0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#fff"/>
                                <Setter Property="Foreground" Value="#222"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Background="#fff" CornerRadius="18" Padding="36" Margin="40" Effect="{DynamicResource DropShadowEffect}">
            <TabControl x:Name="BuySellTab" SelectedIndex="0">
                <TabItem Header="Al">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">
                        <ComboBox x:Name="BuyCurrencyComboBox" Width="340" Height="38" Margin="0,0,0,12" FontSize="15"/>
                        <TextBlock x:Name="BuyCurrencyRateText" Text="1 USD = 32,00 TL" FontSize="16" Foreground="#444" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,24">
                            <TextBlock Text="Döviz Miktarı" FontSize="13" Foreground="#888" Margin="0,0,0,2"/>
                            <TextBox x:Name="BuyAmountTextBox" Width="340" Height="36" Margin="0,0,0,8" FontSize="15" VerticalContentAlignment="Center" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Döviz (örn. USD)" PreviewTextInput="AmountTextBox_PreviewTextInput"/>
                            <TextBlock Text="TL Karşılığı" FontSize="13" Foreground="#888" Margin="0,0,0,2"/>
                            <TextBox x:Name="BuyTotalTextBox" Width="340" Height="36" Margin="0,0,0,8" FontSize="15" VerticalContentAlignment="Center" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="TL" PreviewTextInput="AmountTextBox_PreviewTextInput"/>
                        </StackPanel>
                        <Button Content="Al" Width="120" Height="38" Background="#F7D90F" Foreground="#222" FontWeight="SemiBold" BorderThickness="0"  Cursor="Hand" Style="{StaticResource {x:Type Button}}" Click="Button_Click"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Sat">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">
                        <ComboBox x:Name="SellCurrencyComboBox" Width="340" Height="38" Margin="0,0,0,12" FontSize="15"/>
                        <TextBlock x:Name="SellCurrencyRateText" Text="1 USD = 32,00 TL" FontSize="16" Foreground="#444" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,24">
                            <TextBlock Text="Döviz Miktarı" FontSize="13" Foreground="#888" Margin="0,0,0,2"/>
                            <TextBox x:Name="SellAmountTextBox" Width="340" Height="36" Margin="0,0,0,8" FontSize="15" VerticalContentAlignment="Center" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Döviz (örn. USD)" PreviewTextInput="AmountTextBox_PreviewTextInput"/>
                            <TextBlock Text="TL Karşılığı" FontSize="13" Foreground="#888" Margin="0,0,0,2"/>
                            <TextBox x:Name="SellTotalTextBox" Width="340" Height="36" Margin="0,0,0,8" FontSize="15" VerticalContentAlignment="Center" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="TL" PreviewTextInput="AmountTextBox_PreviewTextInput"/>
                        </StackPanel>
                        <Button Content="Sat" Width="120" Height="38" Background="#222" Foreground="#fff" FontWeight="SemiBold" BorderThickness="0"  Cursor="Hand" Style="{StaticResource {x:Type Button}}"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
