<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="BankProject2.Views.ChangeLimitControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="240" Width="380">
    <Grid Background="#F4F6FB" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Limit Increase/Decrease" FontSize="22" FontWeight="Bold" Margin="0,0,0,18" HorizontalAlignment="Center"/>
            <TextBlock Text="Amount (TL):" FontSize="15" Margin="0,0,0,4"/>
            <TextBox x:Name="AmountTextBox" Height="32" FontSize="15" Margin="0,0,0,18" Padding="8"/>
            <Button Content="Confirm" Height="36" Background="#F7D90F" Foreground="Black" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
