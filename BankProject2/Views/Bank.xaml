<UserControl x:Class="BankProject2.BankPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             Background="#F4F6FB">
    <UserControl.Resources>
        <!-- Modern Border ve başlıklar için stil -->
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#F4F6FB"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>
        <!-- Modern TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="32,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="#eee"/>
            <Setter Property="BorderBrush" Value="#eee"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="{TemplateBinding Background}" CornerRadius="12,12,0,0" BorderThickness="0" Margin="0,0,8,0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#fff"/>
                                <Setter Property="Foreground" Value="#222"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Background="#fff" CornerRadius="18" Padding="36" Margin="40" Effect="{DynamicResource DropShadowEffect}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TabControl x:Name="BankTabControl" SelectedIndex="0">
                <TabItem Header="Vadesiz Hesap">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,18" VerticalAlignment="Center">
                            <Viewbox Width="38" Height="38" Margin="0,0,12,0" VerticalAlignment="Center">
                                <Canvas Width="32" Height="32">
                                    <Ellipse Width="32" Height="32" Fill="#F7D90F"/>
                                    <TextBlock Text="💰" FontSize="18" FontWeight="Bold" Foreground="#222" Canvas.Left="6" Canvas.Top="5"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Vadesiz Hesap" FontSize="28" FontWeight="Bold" Foreground="#222" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border>
                            <StackPanel>
                                <TextBlock Text="Bakiye" FontSize="14" Foreground="#888"/>
                                <TextBlock x:Name="VadesizBalanceText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#27AE60"/>
                            </StackPanel>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,18" >
                            <Button Content="Para Gönder" Width="150" Height="40" Background="#F7D90F" Foreground="#222" FontWeight="SemiBold" BorderThickness="0" Margin="0,0,16,0" Cursor="Hand" Click="ParaGonderButton_Click"/>
                            <Button Content="Diğer İşlem" Width="150" Height="40" Background="#222" Foreground="#fff" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                        <TextBlock Text="İşlem Geçmişi" FontSize="16" FontWeight="SemiBold" Margin="16,16,0,8" HorizontalAlignment="Center"/>
                        <Border CornerRadius="10" Background="#fff" Padding="0" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="440" Height="220">
                            <DataGrid x:Name="VadesizTransactionDataGrid" Height="200" Width="420" Margin="0" Background="#fff" BorderThickness="0" RowBackground="#F9F9F9" AlternatingRowBackground="#F4F6FB" GridLinesVisibility="None" HeadersVisibility="Column" ColumnHeaderHeight="32" RowHeaderWidth="0" FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="True"/>
                        </Border>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Vadeli Hesap">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,18" VerticalAlignment="Center">
                            <Viewbox Width="38" Height="38" Margin="0,0,12,0" VerticalAlignment="Center">
                                <Canvas Width="32" Height="32">
                                    <Ellipse Width="32" Height="32" Fill="#F7D90F"/>
                                    <TextBlock Text="🏦" FontSize="18" FontWeight="Bold" Foreground="#222" Canvas.Left="6" Canvas.Top="5"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Vadeli Hesap" FontSize="28" FontWeight="Bold" Foreground="#222" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border>
                            <StackPanel>
                                <TextBlock Text="Bakiye" FontSize="14" Foreground="#888"/>
                                <TextBlock x:Name="VadeliBalanceText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#27AE60"/>
                            </StackPanel>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,18" >
                            <Button Content="Para Gönder" Width="150" Height="40" Background="#F7D90F" Foreground="#222" FontWeight="SemiBold" BorderThickness="0" Margin="0,0,16,0" Cursor="Hand" Click="ParaGonderButton_Click"/>
                            <Button Content="Vadeli Hesap" Width="150" Height="40" Background="#222" Foreground="#fff" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" Click="VadeliHesapButton_Click"/>
                        </StackPanel>
                        <TextBlock Text="İşlem Geçmişi" FontSize="16" FontWeight="SemiBold" Margin="16,16,0,8" HorizontalAlignment="Center"/>
                        <Border CornerRadius="10" Background="#fff" Padding="0" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="440" Height="220">
                            <DataGrid x:Name="VadeliTransactionDataGrid" Height="200" Width="420" Margin="0" Background="#fff" BorderThickness="0" RowBackground="#F9F9F9" AlternatingRowBackground="#F4F6FB" GridLinesVisibility="None" HeadersVisibility="Column" ColumnHeaderHeight="32" RowHeaderWidth="0" FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="True"/>
                        </Border>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
