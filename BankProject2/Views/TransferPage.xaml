<UserControl x:Class="BankProject2.TransferPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             Background="#F4F6FB">
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
        </Style>
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="32,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="#eee"/>
            <Setter Property="BorderBrush" Value="#eee"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="{TemplateBinding Background}" CornerRadius="12,12,0,0" BorderThickness="0" Margin="0,0,8,0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#fff"/>
                                <Setter Property="Foreground" Value="#222"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">
            <!-- Üstte bakiyeler -->
            <Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <StackPanel Margin="0,0,24,0">
                        <TextBlock Text="Current Balance" FontSize="14" Foreground="#888"/>
                        <TextBlock x:Name="VadesizBalanceText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#27AE60"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Time Deposit Balance" FontSize="14" Foreground="#888"/>
                        <TextBlock x:Name="VadeliBalanceText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#27AE60"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- Sekmeli yapı -->
            <TabControl x:Name="AccountTabControl" Margin="0,0,0,18">
                <TabItem Header="Current Account" x:Name="TabVadesiz"/>
                <TabItem Header="Time Deposit" x:Name="TabVadeli"/>
            </TabControl>
            <!-- Giriş alanları -->
            <Border>
                <StackPanel>
                    <TextBlock Text="Recipient IBAN" FontSize="14" Foreground="#888" Margin="0,0,0,2"/>
                    <TextBox x:Name="IbanTextBox" Height="30"/>
                    <TextBlock Text="Amount" FontSize="14" Foreground="#888" Margin="8,8,0,2"/>
                    <TextBox x:Name="AmountTextBox" Height="30"/>
                    <TextBlock Text="Description (optional)" FontSize="14" Foreground="#888" Margin="8,8,0,2"/>
                    <TextBox x:Name="DescriptionTextBox" Height="30"/>
                </StackPanel>
            </Border>
            <Button x:Name="SendButton" Content="Send" Height="40" Margin="0,12,0,0" Background="#F7D90F" Foreground="#222" FontWeight="SemiBold" BorderThickness="0" Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl> 