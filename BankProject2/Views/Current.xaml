<UserControl x:Class="BankProject2.CurrentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             Background="#F4F6FB">
    <Grid>
        <Border Background="#fff" CornerRadius="18" Padding="36" Margin="48,48,48,48" Effect="{DynamicResource DropShadowEffect}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,18" VerticalAlignment="Center">
                    <!-- Basit bir döviz/finans SVG ikonu (örnek: $ simgesi) -->
                    <Viewbox Width="38" Height="38" Margin="0,0,12,0" VerticalAlignment="Center">
                        <Canvas Width="32" Height="32">
                            <Ellipse Width="32" Height="32" Fill="#F7D90F"/>
                            <TextBlock Text="$" FontSize="22" FontWeight="Bold" Foreground="#222" Canvas.Left="8" Canvas.Top="3"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Current Rates" FontSize="30" FontWeight="Bold" Foreground="#222" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Track currency rates in real-time." FontSize="15" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <Border CornerRadius="10" Background="#fff" Padding="0" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="420">
                    <DataGrid x:Name="dataGridRates"
                              AutoGenerateColumns="True"
                              Margin="0"
                              Background="#fff"
                              BorderThickness="0"
                              RowBackground="#F9F9F9"
                              AlternatingRowBackground="#F4F6FB"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              ColumnHeaderHeight="38"
                              RowHeaderWidth="0"
                              FontSize="15"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
