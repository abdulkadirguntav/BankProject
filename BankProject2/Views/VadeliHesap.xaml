<UserControl x:Class="BankProject2.VadeliHesap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#F7D90F"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <!-- BaÅŸlÄ±k -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Viewbox Width="40" Height="40" Margin="0,0,12,0" VerticalAlignment="Center">
                    <Canvas Width="32" Height="32">
                        <Ellipse Width="32" Height="32" Fill="#F7D90F"/>
                        <TextBlock Text="ðŸ’°" FontSize="18" FontWeight="Bold" Foreground="#222" Canvas.Left="6" Canvas.Top="5"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="Time Deposit Operations" FontSize="28" FontWeight="Bold" Foreground="#222" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Vadesiz Hesap Bakiye -->
            <Border Background="#E8F5E8" Padding="20" Margin="0,0,0,20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Current Account Balance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="VadesizBalanceText" Text="0,00 TL" FontSize="28" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Mevcut Vadeli Hesap Bilgileri -->
            <Border Background="#F8F9FA" Padding="20" Margin="0,0,0,20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Current Time Deposit" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Principal Amount" FontSize="14" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock x:Name="PrincipalAmountText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Accrued Interest" FontSize="14" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock x:Name="AccruedInterestText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#F39C12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Interest Rate" FontSize="14" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock x:Name="InterestRateText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Maturity Date" FontSize="14" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock x:Name="MaturityDateText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#9B59B6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Total Amount" FontSize="14" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TotalAmountText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Remaining Days" FontSize="14" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock x:Name="RemainingDaysText" Text="-" FontSize="22" FontWeight="Bold" Foreground="#E67E22" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Yeni Vadeli Hesap OluÅŸturma -->
            <Border Background="#F8F9FA" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Create New Time Deposit" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    
                    <TextBlock Text="Principal Amount (TL)" FontSize="14" Foreground="#666" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="NewPrincipalTextBox" Margin="0,0,0,15" TextChanged="NewPrincipalTextBox_TextChanged"/>
                    
                    <TextBlock Text="Maturity Period" FontSize="14" Foreground="#666" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <ComboBox x:Name="MaturityPeriodComboBox" Margin="0,0,0,15" SelectionChanged="MaturityPeriodComboBox_SelectionChanged">
                        <ComboBoxItem Content="3 Months"/>
                        <ComboBoxItem Content="6 Months"/>
                        <ComboBoxItem Content="12 Months"/>
                        <ComboBoxItem Content="24 Months"/>
                    </ComboBox>
                    
                    <!-- Hesaplama SonuÃ§larÄ± -->
                    <Border Background="#E8F5E8" Padding="15" Margin="0,0,0,20" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Calculation Results" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center" Foreground="#27AE60"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Interest Rate" FontSize="12" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="CalculatedInterestRateText" Text="-" FontSize="18" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Maturity Date" FontSize="12" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="CalculatedMaturityDateText" Text="-" FontSize="18" FontWeight="Bold" Foreground="#9B59B6" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Total Interest" FontSize="12" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TotalInterestText" Text="-" FontSize="18" FontWeight="Bold" Foreground="#F39C12" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Final Amount" FontSize="12" Foreground="#666" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="FinalAmountText" Text="-" FontSize="18" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="VadeliButton" Content="Time Deposit Operation" Width="400" Margin="0,0,10,0" Click="VadeliButton_Click"/>
                        <Button x:Name="RefreshButton" Content="Refresh" Width="100" Click="RefreshButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl> 